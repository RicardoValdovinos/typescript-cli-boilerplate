{
  "name": "typescript-cli-boilerplate",
  "version": "1.0.0",
  "description": "A TypeScript starter project for the CLI",
  "author": "Ricardo Valdovinos <ricardovaldovinos1996@gmail.com>",
  "license": "MIT",
  "bin": {
    "typescript-cli-boilerplate": "./bin/run.js"
  },
  "type": "module",
  "scripts": {
    "setup": "git init && husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "",
    "build": "tsc -p tsconfig.json",
    "start": "./bin/${npm_package_name}",
    "clean": "rm -rf dist bin",
    "oclif:generate:command": "oclif generate command",
    "oclif:generate:hook": "oclif generate hook",
    "oclif:readme": "oclif generate hook",
    "oclif:pack:deb": "oclif pack deb -r",
    "oclif:pack:macos": "oclif pack macos -r",
    "oclif:pack:tarballs": "oclif pack tarballs -r",
    "oclif:pack:win": "oclif pack win -r",
    "commitlint": "commitlint --edit",
    "commitizen": "exec < /dev/tty && git cz --hook || true"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@inquirer/prompts": "^5.3.8",
    "@oclif/core": "^4.0.19",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@eslint/js": "^9.11.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "oclif": {
    "bin": "typescript-cli-boilerplate",
    "commands": "./dist/commands",
    "dirname": "typescript-cli-boilerplate",
    "topicSeparator": " "
  }
}